/**app.wxss**/

page {
    font-family: -apple-system,
                 "Helvetica Neue",
                 Helvetica,
                 "Nimbus Sans L",
                 Arial,
                 "Liberation Sans",
                 "PingFang SC",
                 "Hiragino Sans GB",
                 "Source Han Sans CN",
                 "Source Han Sans SC",
                 "Microsoft YaHei",
                 "Wenquanyi Micro Hei",
                 "WenQuanYi Zen Hei",
                 "ST Heiti",
                 SimHei,
                 "WenQuanYi Zen Hei Sharp",
                 sans-serif;
    font-weight: 300;
    padding: 0;
    margin: 0;
    width: 100%;
    height: 100%;
    position: relative;
}

text {
    margin: 0 0 1rem 0;
}

strong {
    font-weight: 500;
}

img, video {
    display: block;
    width: 100%;
}

.margin-bottom-10 {
    margin-bottom: 10rpx;
}

.margin-bottom-20 {
    margin-bottom: 20rpx;
}

.margin-bottom-30 {
    margin-bottom: 30rpx;
}

.hide {
    display: none;
    opacity: 0;
}

.text-center {
    text-align: center;
}

#main-container {
    position: relative;
    width: 100%;
    height: 100%;
    overflow-x: hidden;
    overflow-y: scroll;
    -webkit-overflow-scrolling: touch;
    z-index: 3;
    display: flex;
    flex-direction: column;
}

#card-container {
    display: flex;
    flex-direction: column;
    position: relative;
    overflow: hidden;
    background: rgba(255, 255, 255, 0.7);
    border-radius: 15rpx;
    flex: 1 1 auto;
    margin: 50rpx 25rpx;
}

#card-container #card-header-container {
    position: relative;
    font-size: 32rpx;
    text-align: center;
    color: #c2b597;
    height: 4rem;
    line-height: 4rem;
    flex: 0 0 auto;
}

#card-container #card-header-container:after {
    content: ' ';
    position: absolute;
    height: 0.0625rem;
    width: 25%;
    bottom: 0;
    left: 37.5%;
    background: #333;
}

#card-container #card-body-container {
    flex: 1 1 auto;
    display: flex;
    flex-direction: column;
    padding: 0 40rpx;
    margin: 40rpx 0;
}

#card-container #card-footer-container {
    flex: 0 0 75rpx;
    height: 75rpx;
}

#card-footer-container #form-button {
    display: block;
    width: 100%;
    height: 75rpx;
    line-height: 75rpx;
    font-size: 32rpx;
    text-align: center;
    color: #fff;
    background: #666;
}

.section-title {
    height: 48rpx;
    line-height: 48rpx;
    font-size: 32rpx;
    color: #aaa;
    text-align: center;
    margin: 50rpx;
    position: relative;
}

.section-title::before, .section-title::after {
    content: "";
    position: absolute;
    width: 25%;
    height: 1rpx;
    background-color: #ccc;
    top: 24rpx;
}

.section-title::before {
    left: 0;
}

.section-title::after {
    right: 0;
}

.event-block-container {
    overflow: hidden;
    margin: 50rpx 25rpx;
    background-color: #fff;
    border-radius: 15rpx;
    background-size: cover;
    display: flex;
    flex-direction: column;
}

.event-block-container image {
    display: block;
    width: 100%;
}

.event-block-container .event-info-container {
    flex: 0 0 auto;
    border-top: 1rpx solid rgba(255, 255, 255, 0.3);
    box-sizing: border-box;
    background-color: #fff;
    font-size: 22rpx;
    color: #666;
    padding: 35rpx;
}

.event-block-container .event-info-container .event-title-container {
    font-size: 32rpx;
    color: #111;
    margin-bottom: 30rpx;
}