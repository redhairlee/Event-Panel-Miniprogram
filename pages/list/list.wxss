/**********列表页开始**********/

#event-nav-top {
    background-color: #fff;
    left: 0;
    top: 0;
    width: 100%;
    height: 100rpx;
    display: flex;
}

#event-nav-top view {
    flex: 1 1 auto;
    text-align: center;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 24rpx;
    margin: 0 40px;
    box-sizing: border-box;
}

#event-nav-top view.selected {
    border-bottom: 5rpx solid #666;
}

#event-list-container {
    width: 100%;
    height: calc(100% - 100rpx);
    background-color: #ebebeb;
}