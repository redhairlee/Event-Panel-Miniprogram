    margin-top: 300rpx;
}

#event-comment-container {
    text-align: center;
    font-size: 26rpx;
    color: #333;
}

.event-info-container {
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 22rpx;
}

.event-info-container-item {
    flex: 0 0 50%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.event-info-container image {
    width: 50rpx;
    height: 50rpx;
    margin: 10rpx;
    flex: 0 0 50rpx;
}

