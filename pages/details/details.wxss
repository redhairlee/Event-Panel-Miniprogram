#event-name-container {
    text-align: center;
    font-size: 48rpx;
}

#event-info-container {
    text-align: center;
    font-size: 26rpx;
    color: #333;
}

#event-map-container {
    width: 630rpx;
    height: 500rpx;
    position: relative;
}

#event-intro-container {
    font-size: 22rpx;
    color: #999;
}

#event-map-nav {
    width: 630rpx;
    height: 48rpx;
    line-height: 48rpx;
    background-color: #fff;
    font-size: 20rpx;
    text-align: center;
}

